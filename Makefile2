
# the next 3 lines define 3 macros, for example, macro CC is the same as gcc
CC = gcc
FILES = main.c intArray.c prime.c
EXE = toy 


# in the next 2 lines: "$(FILES)" is equivalent to "main.c intArray.c prime.c"
#                      "$(EXE)" is equivalent to "toy"
#                      "$(CC)"  is equivalent to "gcc"  
$(EXE): $(FILES)
	$(CC) -o $(EXE) $(FILES)

clean: 
	rm -f *.o toy
