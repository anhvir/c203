
# the next 3 lines define 3 macros, for example, CC is defined as "gcc"
CC = gcc
CFLAGS = -g -Wall -std=c99
FILES = random_friend.c
EXE = afriend


# in the next 2 lines: "$(FILES)" is equivalent to "random_friend.c"
#                      "$(EXE)" is equivalent to "afriend"
#                      "$(CC)"  is equivalent to "gcc"  
$(EXE): $(FILES)
	$(CC) $(CFLAGS) -o $(EXE) $(FILES)

clean: 
	rm -f *.o $(EXE)


